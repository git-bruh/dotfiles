#!/bin/sh

. "$(dirname "$0")/flags.sh"

mkdir -p "$HOME/.config/flatpak" "$HOME/.local/share/flatpak" "$HOME/Downloads/flatpak"

exec bwrap \
	$DEFFLAGS \
	--bind "$HOME/.config/flatpak" "$HOME/.var" \
	--bind "$HOME/.local/share/flatpak" "$HOME/.local/share/flatpak" \
	--bind "$HOME/Downloads/flatpak" "$HOME/Downloads" \
	--bind "$(dirname "$0")/dbus-wrap" /dbus-wrap \
	/dbus-wrap /usr/bin/flatpak "$@"
