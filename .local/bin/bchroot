#!/bin/sh

exec bwrap \
	--bind "${1:-$HOME/Distros/KISS}" / \
	--bind /tmp /tmp \
	--bind "$HOME/.cache/kiss/sources" /root/.cache/kiss/sources \
	--ro-bind /etc/resolv.conf /etc/resolv.conf \
	--dev /dev \
	--proc /proc \
	--tmpfs /run \
	--unshare-all \
	--share-net \
	--die-with-parent \
	--uid 0 \
	--gid 0 \
	env -i \
		SHELL=/bin/sh \
		TERM=xterm-256color \
		LOGNAME=root \
		USER=root \
		HOME=/root \
		/bin/sh -l
